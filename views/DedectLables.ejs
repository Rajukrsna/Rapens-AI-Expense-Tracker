<section class="container mt-4">
  <h1 class="text-center text-primary">Upload Your Bill</h1>
  <p class="text-center text-muted">Extract bill details and categorize your spending with ease.</p>

  <!-- Upload Bill Form -->
  <div class="card mx-auto" style="max-width: 600px;">
    <form action="/ocrDedect/process-bill" method="POST" enctype="multipart/form-data" class="mt-3">
      <div class="mb-3">
        <label for="bill" class="form-label">Upload Bill (Image or PDF)</label>
        <input 
          type="file" 
          name="bill" 
          id="bill" 
          class="form-control" 
          accept="image/*,application/pdf" 
          required>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg w-100">Submit</button>
      </div>
    </form>
  </div>

  <!-- Result Card -->
  <% if (typeof message !== 'undefined' && typeof extractedAmount !== 'undefined' && typeof category !== 'undefined') { %>
    <div class="result-card mx-auto mt-4" style="max-width: 600px;">
      <h4 class="text-center text-success">
        <i class="fas fa-check-circle"></i> <%= message %>
      </h4>
      <p class="text-center text-dark">
        Amount Spent: <strong>â‚¹<%= extractedAmount %></strong>
      </p>
      <p class="text-center text-dark">
        Category: <strong><%= category %></strong>
      </p>
    </div>
  <% } %>

  <!-- Back to Dashboard -->
  <div class="text-center mt-4">
    <a href="/dashboard/dashboard" class="btn btn-secondary btn-lg">
      <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
  </div>
</section>
